import sys
from StringIO import StringIO

if len(sys.argv) != 2:
    print "Syntax: %s top|addons"
    sys.exit(1)

data = [
  file('include/addons-menu/%s_header.xml' % sys.argv[1]),
  StringIO("""<!--
# WARNING: This file has been dynamically generated, don't edit it!
# WARNING: You can edit files in the 'include' folder instead,
# WARNING: then run 'python %s'.
-->
""" % sys.argv[0]),
  file('include/addons-menu/common.xml'),
  file('include/addons-menu/%s_footer.xml' % sys.argv[1]),
]

for d in data:
    sys.stdout.write(d.read())
    d.close()

sys.exit(0)
